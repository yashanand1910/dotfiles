{
  "title": "Vim Extras",
  "rules": [
    {
      "description": "Remap Ctrl-j to ENTER",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": [
                "left_shift",
                "left_command",
                "left_option",
                "right_shift",
                "right_command",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "return_or_enter"
            }
          ]
        }
      ]
    },
    {
      "description": "Remap Ctrl-u/d to page up/down",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": [
                "left_shift",
                "left_command",
                "left_option",
                "right_shift",
                "right_command",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "page_down"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "u",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": [
                "left_shift",
                "left_command",
                "left_option",
                "right_shift",
                "right_command",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "page_up"
            }
          ]
        }
      ]
    }
  ]
}
